<Window x:Class="Projekt_Czarnacka_Gawron_Hasa_Kuchta.Lekarz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Czarnacka_Gawron_Hasa_Kuchta"
        mc:Ignorable="d"
        Title="Lekarz" Height="450" Width="352.594">
    <Grid>
        <Label Content="Status" HorizontalAlignment="Left" Margin="10,383,0,0" VerticalAlignment="Top" Panel.ZIndex="1000"/>
        <Label Content="Zalogowano jako" HorizontalAlignment="Left" Margin="103,383,0,0" VerticalAlignment="Top" Panel.ZIndex="1000"/>
        <Label x:Name="userLbl" Content="" HorizontalAlignment="Left" Margin="204,383,0,0" VerticalAlignment="Top" Panel.ZIndex="1000" Width="95"/>
        <Label x:Name="statusLbl" Content="" HorizontalAlignment="Left" Margin="52,383,0,0" VerticalAlignment="Top" Panel.ZIndex="1000" Width="46"/>

        <DockPanel>
            <Grid x:Name="PanelEdycjaWizyty" Width="343" Panel.ZIndex="1" Visibility="Visible">
                <DataGrid x:Name="WizytyView" Height="314" Margin="10,10,10,0" VerticalAlignment="Top" AutoGenerateColumns="false" CanUserAddRows="false">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Id Pacjenta" Binding="{Binding id_pacjenta}"  IsReadOnly="True"/>
                        <DataGridTextColumn Header="Id Lekarza" Binding="{Binding id_lekarza}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Data" Binding="{Binding data, StringFormat='yyy-MM-dd'}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Godzina" Binding="{Binding godzina}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Status" Binding="{Binding status}" />
                        <DataGridTextColumn Header="Uwagi" Binding="{Binding uwagi}" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="ZapiszEdycje" Content="Aktualizuj" HorizontalAlignment="Left" Margin="130,330,0,0" VerticalAlignment="Top" Width="75" Click="ZapiszEdycje_Click"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
